<Window x:Class="EvolUX.LogViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvolUX.LogViewer"
        mc:Ignorable="d"
        Title="EvolUX Log Viewer" Height="720" Width="1280" 
        MinHeight="480" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <ToolBar Grid.Row="0" Padding="5">
            <Button Command="{Binding OpenLogFolderCommand}" ToolTip="Open Log Folder">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/folder-icon.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Open Logs"/>
                </StackPanel>
            </Button>
            <Separator/>
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox Width="120" ItemsSource="{Binding LogLevels}" 
                      SelectedItem="{Binding SelectedLogLevel}" Margin="5,0"/>
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5,0"/>
            <Button Command="{Binding SearchCommand}" ToolTip="Search">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/search-icon.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Search"/>
                </StackPanel>
            </Button>
            <Separator/>
            <TextBlock Text="From:" VerticalAlignment="Center" Margin="5,0"/>
            <DatePicker SelectedDate="{Binding FromDate}" Width="120" Margin="5,0"/>
            <TextBlock Text="To:" VerticalAlignment="Center" Margin="5,0"/>
            <DatePicker SelectedDate="{Binding ToDate}" Width="120" Margin="5,0"/>
            <Separator/>
            <Button Command="{Binding ExportLogsCommand}" ToolTip="Export Selected Logs">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/export-icon.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Export"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Log List Panel -->
            <Border Grid.Column="0" BorderBrush="#CCC" BorderThickness="0,1,1,1" Margin="0,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Log Entries" FontWeight="Bold" Margin="10,5"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding LogEntries}" 
                              SelectedItem="{Binding SelectedLogEntry, Mode=TwoWay}"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                                   Foreground="#555"/>
                                        <TextBlock Text="{Binding Level}" Margin="10,0,0,0"
                                                   Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Text="{Binding Message}" TextWrapping="NoWrap" 
                                               TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch" Background="#CCC"/>

            <!-- Log Detail Panel -->
            <Border Grid.Column="2" BorderBrush="#CCC" BorderThickness="0,1,0,1">
                <Grid DataContext="{Binding SelectedLogEntry}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Log Details" FontWeight="Bold" Margin="10,5"/>

                    <ScrollViewer Grid.Row="1">
                        <StackPanel Margin="10">
                            <!-- Header Details -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Timestamp:" FontWeight="SemiBold" Margin="0,2,10,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss.fff}'}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Level:" FontWeight="SemiBold" Margin="0,2,10,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Level}" 
                                           Foreground="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Trace ID:" FontWeight="SemiBold" Margin="0,2,10,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TraceId}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Message:" FontWeight="SemiBold" Margin="0,2,10,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Message}" TextWrapping="Wrap"/>
                            </Grid>

                            <!-- Variables Section -->
                            <Expander Header="Variables" Margin="0,5" IsExpanded="True" 
                                      Visibility="{Binding HasVariables, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TreeView ItemsSource="{Binding VariablesTreeNodes}" Margin="5">
                                    <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
                                                <TextBlock Text=": " Visibility="{Binding HasValue, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding Value}" Foreground="#038C3E"
                                                           Visibility="{Binding HasValue, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </Expander>

                            <!-- Exception Section -->
                            <Expander Header="Exception Details" Margin="0,5" IsExpanded="True"
                                      Visibility="{Binding HasException, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0,2,10,2"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ExceptionType}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Message:" FontWeight="SemiBold" Margin="0,2,10,2"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ExceptionMessage}" TextWrapping="Wrap"/>
                                    </Grid>

                                    <!-- Exception Data -->
                                    <Expander Header="Exception Data" Margin="0,10,0,10" 
                                              Visibility="{Binding HasExceptionData, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TreeView ItemsSource="{Binding ExceptionDataTreeNodes}" Margin="5">
                                            <TreeView.ItemTemplate>
                                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
                                                        <TextBlock Text=": " Visibility="{Binding HasValue, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                        <TextBlock Text="{Binding Value}" Foreground="#0063B1"
                                                                   Visibility="{Binding HasValue, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                </HierarchicalDataTemplate>
                                            </TreeView.ItemTemplate>
                                        </TreeView>
                                    </Expander>

                                    <!-- Inner Exceptions -->
                                    <Expander Header="Inner Exceptions" Margin="0,5" 
                                              Visibility="{Binding HasInnerExceptions, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <ItemsControl ItemsSource="{Binding InnerExceptions}" Margin="5">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#DDD" BorderThickness="1" Margin="0,5" Padding="5">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Type}" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Margin="0,5"/>
                                                            <Expander Header="Stack Trace" Margin="0,5" 
                                                                      Visibility="{Binding HasStackTrace, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBox Text="{Binding StackTrace, Mode=OneWay}" 
                                                                         IsReadOnly="True" BorderThickness="0"
                                                                         Background="#F5F5F5" FontFamily="Consolas" 
                                                                         TextWrapping="Wrap"/>
                                                            </Expander>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>

                                    <!-- Stack Trace -->
                                    <Expander Header="Stack Trace" Margin="0,10,0,0" IsExpanded="True"
                                              Visibility="{Binding HasStackTrace, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBox Text="{Binding StackTrace, Mode=OneWay}" 
                                                 IsReadOnly="True" BorderThickness="0"
                                                 Background="#F5F5F5" FontFamily="Consolas" 
                                                 TextWrapping="Wrap"/>
                                    </Expander>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Background="#F0F0F0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StatusBar Grid.ColumnSpan="2">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StatusBarItem>
                <StatusBarItem Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding LogEntries.Count, StringFormat='Total Entries: {0}'}"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>