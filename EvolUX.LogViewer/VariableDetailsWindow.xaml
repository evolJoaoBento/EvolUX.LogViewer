<Window x:Class="EvolUX.LogViewer.VariableDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Variable Details" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="variableNameText" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="variableTypeText" Foreground="Gray" FontSize="12"/>
        </StackPanel>

        <!-- Search Box -->
        <DockPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="searchBox" TextChanged="SearchBox_TextChanged"/>
        </DockPanel>

        <!-- Content -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Background="#FAFAFA">
            <TextBox x:Name="contentTextBox"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AcceptsReturn="True"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Copy to Clipboard" Padding="10,5" Margin="0,0,10,0" Click="CopyButton_Click"/>
            <Button Content="Close" Padding="10,5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
